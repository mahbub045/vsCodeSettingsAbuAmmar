{
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[vue]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
    },
    "gitignore.cacheExpirationInterval": 3600,
    "git.autofetch": true,
    "editor.minimap.enabled": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "explorer.confirmDelete": false,
    "editor.rulers": [],
    // end of config
    // Enables font ligatures
    "editor.fontLigatures": true,
    // new  my experimental starts
    "workbench.list.smoothScrolling": true,
    "editor.autoClosingBrackets": "always",
    "editor.bracketPairColorization.enabled": true,
    "workbench.colorCustomizations": {
        "editorBracketHighlight.foreground1": "#E6E6E6",
        "editorBracketHighlight.foreground2": "#fde047",
        "editorBracketHighlight.foreground3": "#4ade80",
        "editorBracketHighlight.foreground4": "#FF2C6D",
        "editorBracketHighlight.foreground5": "#5737f3",
        "editorBracketHighlight.foreground6": "#FFABAB"
    },
    "editor.inlineSuggest.enabled": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.scrollBeyondLastLine": false,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorWidth": 2,
    "editor.guides.highlightActiveBracketPair": true,
    "terminal.integrated.fontFamily": "FiraCode NF Retina",
    //"terminal.integrated.fontWeight": "normal",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.smoothScrolling": true,
    "search.useGlobalIgnoreFiles": true,
    "search.exclude": {
        "**/node_modules": false,
        "node_modules": true,
        "yarn.lock": true
    },
    "scm.diffDecorationsIgnoreTrimWhitespace": "true",
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1"
    },
    "scss.lint.unknownAtRules": "ignore",
    "css.lint.unknownAtRules": "ignore",
    "editor.guides.highlightActiveIndentation": true,
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "editor.quickSuggestions": {
        "strings": true
    },
    "tailwindCSS.includeLanguages": {
        "plaintext": "html"
    },
    "editor.scrollbar.verticalScrollbarSize": 8,
    "workbench.editor.enablePreview": false,
    "editor.wordWrap": "on",
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "tailwindCSS.emmetCompletions": true,
    "workbench.colorTheme": "GitHub Dark",
    "workbench.productIconTheme": "fluent-icons",
    "editor.suggest.showKeywords": false,
    "typescript.suggest.paths": false,
    "javascript.suggest.paths": false,
    "editor.tabCompletion": "onlySnippets",
    "editor.snippetSuggestions": "top",
    "javascript.updateImportsOnFileMove.enabled": "never",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 2000,
    "diffEditor.ignoreTrimWhitespace": false,
    "terminal.integrated.env.windows": {},
    "workbench.iconTheme": "material-icon-theme"
    //ends
}